{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cpbuildrun",
            "type": "shell",
            "command": "${fileWorkspaceFolder}/.vscode/cpbuildrun.sh",
            "args": ["${file}", "${fileBasenameNoExtension}"],
            "group": "none",
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label" : "tm",
            "type" : "shell",
            "command" : "${fileWorkspaceFolder}/.vscode/tm.sh",
            "args": ["${file}", "${fileWorkspaceFolder}/.vscode/tm.cpp", "${fileWorkspaceFolder}/.vscode/temp"],
            "group" : "none",
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label" : "retrieve",
            "type" : "shell",
            "command" : "${fileWorkspaceFolder}/.vscode/tm.sh",
            "args": ["${file}", "${fileWorkspaceFolder}/.vscode/temp", "/dev/null"],
            "group" : "none",
            "options": {"cwd" : "${fileDirname}"},
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}